<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appli_CocoriCO2"
        xmlns:Properties="clr-namespace:Appli_CocoriCO2.Properties" x:Class="Appli_CocoriCO2.ExpSettingsWindow"
        mc:Ignorable="d"
        Title="Experiment Settings" Height="450" Width="800" Closing="Window_Closing">
    <Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="149*"/>
                <ColumnDefinition Width="643*"/>
            </Grid.ColumnDefinitions>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,132,0,0" TextWrapping="Wrap"  x:Name="tb_pH_setPoint" Text="" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_pH_setpoint" Content="pH setpoint" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Height="25" Width="135"/>
            <Label x:Name="label_pH_title" Content="CO2 Valve regulation" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="25" Width="240" Grid.ColumnSpan="2" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,187,0,0" TextWrapping="Wrap"  x:Name="tb_pH_Kp" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label Content="Kp" HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top" Height="25" Width="84"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,213,0,0" TextWrapping="Wrap"  x:Name="tb_pH_Ki" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label Content="Ki" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Height="25" Width="84"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,239,0,0" TextWrapping="Wrap"  x:Name="tb_pH_Kd" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label Content="Kd" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Height="25" Width="83"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="0,162,0,0" TextWrapping="Wrap"  x:Name="tb_pH_measure" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
            <Label x:Name="label_pH_measure" Content="pH measure" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.ColumnSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,269,0,0" TextWrapping="Wrap"  x:Name="tb_pH_PIDoutput" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
            <Label Content="PID output" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Height="25" Width="84"/>
            <Label Content="%" HorizontalAlignment="Left" Margin="104,266,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.Column="1"/>
            <ComboBox x:Name="comboBox_Condition" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="comboBox_Condition_SelectionChanged" Grid.ColumnSpan="2">
                <ComboBoxItem Content="Control Condition"/>
                <ComboBoxItem Content="Condition 1"/>
                <ComboBoxItem Content="Condition 2"/>
                <ComboBoxItem Content="Condition 3"/>
                <ComboBoxItem Content="Inlet Pressure"/>
                <ComboBoxItem Content="Hot Water"/>
            </ComboBox>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="1,326,0,0" TextWrapping="Wrap"  x:Name="tb_pH_consigneForcage"  VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <CheckBox x:Name="checkBox_pH_Override" Content="Manual Override" HorizontalAlignment="Left" Margin="19,328,0,0" VerticalAlignment="Top"/>
            <Label Content="%" HorizontalAlignment="Left" Margin="101,325,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,132,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_setPoint" Text="" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
            <Label x:Name="label_Temp_setpoint" Content="Temperature setpoint" HorizontalAlignment="Left" Margin="226,129,0,0" VerticalAlignment="Top" Height="25" Width="126" Grid.Column="1"/>
            <Label x:Name="label_Temp_title" Content="Temperature regulation" HorizontalAlignment="Left" Margin="226,70,0,0" VerticalAlignment="Top" Height="25" Width="256" Grid.Column="1" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,187,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_Kp" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_Temp_Kp" Content="Kp" HorizontalAlignment="Left" Margin="226,184,0,0" VerticalAlignment="Top" Height="25" Width="84" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,213,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_Ki" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_Temp_Ki" Content="Ki" HorizontalAlignment="Left" Margin="226,210,0,0" VerticalAlignment="Top" Height="25" Width="84" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,239,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_Kd" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_Temp_Kd" Content="Kd" HorizontalAlignment="Left" Margin="226,236,0,0" VerticalAlignment="Top" Height="25" Width="83" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="365,162,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_measure" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
            <Label x:Name="label_Temp_measure" Content="Temperature measure" HorizontalAlignment="Left" Margin="226,157,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,269,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_PIDoutput" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
            <Label x:Name="label_Temp_sortiePID" Content="PID output" HorizontalAlignment="Left" Margin="226,266,0,0" VerticalAlignment="Top" Height="25" Width="84" Grid.Column="1"/>
            <Label x:Name="label_pc1" Content="%" HorizontalAlignment="Left" Margin="469,266,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="366,326,0,0" TextWrapping="Wrap"  x:Name="tb_Temp_consigneForcage"  VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <CheckBox x:Name="checkBox_Temp_Override" Content="Manual Override" HorizontalAlignment="Left" Margin="235,328,0,0" VerticalAlignment="Top" Grid.Column="1"/>
            <Label x:Name="label_pc2" Content="%" HorizontalAlignment="Left" Margin="466,325,0,0" VerticalAlignment="Top" Height="25" Width="143" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="365,105,0,0" TextWrapping="Wrap"  x:Name="tb_dT_setPoint" Text="" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_dT" Content="delta T°C setpoint" HorizontalAlignment="Left" Margin="226,100,0,0" VerticalAlignment="Top" Height="25" Width="117" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="0,105,0,0" TextWrapping="Wrap"  x:Name="tb_dpH_setPoint" Text="" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            <Label x:Name="label_dpH" Content="delta pH setpoint" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Height="25" Width="129"/>
        </Grid>
        <Button x:Name="btn_SaveToPLC" Content="Save" Margin="0,0,174,16"  Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Click="btn_SaveToPLC_Click"/>
        <Button x:Name="btn_Cancel" Content="Cancel" Margin="0,0,15,16"  Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Click="btn_Cancel_Click"/>

    </Grid>
</Window>